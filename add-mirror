# Adds all Ubuntu mirrors for release $2 

for repo in main restricted universe multiverse
do
 docker run -n -v /media/ubuntu-mirror:/data/aptly narkisr/aptly aptly -architectures='amd64,i386' mirror create -with-sources=false -ignore-signatures=true $1-$repo http://il.archive.ubuntu.com/ubuntu/ $2 $repo
done
