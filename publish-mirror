timestamp=$(date +%s)

for repo in main restricted universe multiverse
do
 docker run -n -v /media/ubuntu-mirror:/data/aptly narkisr/aptly aptly snapshot create $1-$repo-$timestamp from mirror $1-$repo
 docker run -n -v /media/ubuntu-mirror:/data/aptly narkisr/aptly aptly publish snapshot $1-$repo-$timestamp
done
